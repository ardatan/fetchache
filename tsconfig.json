{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "module": "esnext",
        "target": "es2017",
        "lib": [
            "esnext"
        ],
        "suppressImplicitAnyIndexErrors": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "declaration": true,
        "outDir": "./dist/",
        "rootDir": "./src/",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "importHelpers": true,
        "baseUrl": "."
    },
    "include": [
        "src/index.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}